    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
 
<!--JS -->
<script  src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="   crossorigin="anonymous"></script>
<script src="bootstable.min.js"></script>
    <title>Ver Cliente</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/users/dashadmin"><%= user.charAt(0).toUpperCase() + user.slice(1) %></a>
    <button class="navbar-toggler" aria-expanded="false" aria-controls="navbarSupportedContent" aria-label="Toggle navigation" type="button" data-target="#navbarSupportedContent" data-toggle="collapse">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        
        <li class="nav-item">
          <a class="nav-link" href="/users/register">Registrar Usuario</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/users/manejar_solis">Manejar Solicitudes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/ver_proyectos_aprobados">Ver Proyectos Aprobados</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/manejar_usuarios">Ver Usuarios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/manejar_clientes">Ver Clientes</a>
          </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" aria-expanded="false" aria-haspopup="true" href="#" data-toggle="dropdown">
            Equipos
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/users/crear_equipo">Crear Equipo</a>
            <a class="dropdown-item" href="/users/ver_equipos">Ver Equipos</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
            <a class="nav-link" href="/users/logout">Logout <span class="sr-only">(current)</span></a>
          </li>
      </ul>
    </div>
  </nav>
    <center>
        <div class="jumbotron">
            <h1 class="display-5">Informacion de Cliente</h1>
            <strong class="text-success">Mira los proyectos, solicitudes e historias de este cliente</strong>
        </div>
    <ul>
    <% if(messages.success_msg) { %>
        <li><%= messages.success_msg %></li>
        <% } %>
    </ul>

    <ul>
        <% if(messages.error ){ %>
        <li><%= messages.error %></li>
       <% } %>
    </ul>

    <form action="/users/ver_info_cliente" method="POST">
        <div class="container">
        <div class="card-deck">
            <div class="card bg-secondary">
                <div class="card-header bg-primary text-center">Solicitudes</div>
              <div class="card-body text-center text-white">
                <% for(var i = 0; i < solicitudes.length; i++){%>
                <p class="card-text"><%= solicitudes[i].nombre_pro %></p>
                <% } %>
              </div>
            </div>
            <div class="card bg-secondary">
                <div class="card-header bg-warning text-center">Proyectos</div>
              <div class="card-body text-center text-white">
                <% for(var i = 0; i < proyectos.length; i++){%>
                    <p class="card-text"><%= proyectos[i].pseudo_nombre %></p>
                    <% } %>
              </div>
            </div>
            <div class="card bg-secondary">
                <div class="card-header bg-success text-center">Historias</div>
              <div class="card-body text-center text-white">
                <% for(var i = 0; i < historias.length; i++){%>
                    <p class="card-text"><%= historias[i].nombre_historia %></p>
                    <% } %>
              </div>
            </div>
          </div>
        </div>
    </form>
</center>
</body>
</html>