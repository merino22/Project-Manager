      </nav>
      <div class="container form-group col-form-label-lg">
        <h1 class="display-4">Functionality Management</h1>
      </div>
      <hr>

      <div class="container">
        <h3>Functionalities in Process</h3>
        <table class="table table-dark table-hover">
          <thead>
            <tr>
              <th style="text-align: center;">Project</th>
              <th style="text-align: center;">Functionality</th>
              <th style="text-align: center;">Status</th>
              <th style="text-align: center;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < func.length; i++) { %>
            <% if(func[i].estado_historia == "In Process") { %>
            <tr>
              <th style="text-align: center;"><%= func[i].pseudo_nombre %></th>
              <th style="text-align: center;"><%= func[i].nombre_historia %></th>
              <th style="text-align: center;"><%= func[i].estado_historia %></th>
              <th>
                <form action="/users/functionalities" method="POST">
                <div class="row justify-content-center">
                  <input type="hidden" id="statusx" name="statusx" value="<%= func[i].nombre_historia %>"></input>
                  <input type="hidden" id="check" name="check" value="<%= func[i].estado_historia %>"></input>
                  <button type="submit" class=" btn btn-success badge-pill" id="btnComplete" onclick="">Set Completed</button>
                </div>
              </form>
              </th>
            </tr>
            <% } %>
            <% } %>
          </tbody>
        </table>
      </div>

      <hr> 

      <div class="container">
        <h3>Completed Functionalities</h3>
        <table class="table table-dark table-hover" id="tablex">
          <thead>
            <tr>
              <th style="text-align: center;">Project</th>
              <th style="text-align: center;">Functionality</th>
              <th style="text-align: center;">Status</th>
              <th style="text-align: center;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < func.length; i++) { %>
            <tr>
              <% if(func[i].estado_historia == "Completed") { %>
              <td style="text-align: center;"><%= func[i].pseudo_nombre %></td>
              <td style="text-align: center;"><%= func[i].nombre_historia %></td>
              <td class="nr" style="text-align: center;"><%= func[i].estado_historia %></td>
              <td>
              <form action="/users/functionalities" method="POST">
                <div class="row justify-content-center">
                  <input type="hidden" id="statusx" name="statusx" value="<%= func[i].nombre_historia %>"></input>
                  <input type="hidden" id="check" name="check" value="<%= func[i].estado_historia %>"></input>
                  <button type="submit" class="btn btn-primary badge-pill" id="submit">Set In Progress</button>
                </div>
              </form>
              </td>
              <% } %> 
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
